{
  "name": "markshot",
  "version": "1.3.2",
  "description": "スクリーンショット＆注釈ツール",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:build": "vite build && electron-builder",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:stress": "node -e \"const cp=require('child_process'); let exit=0; for(let i=0;i<20;i++) { const r=cp.spawnSync('npm',['run','test'],{stdio:'pipe',cwd:process.cwd(),encoding:'utf8',shell:true}); if(r.status!==0) { console.error('Run '+(i+1)+' failed'); if(r.stderr) process.stderr.write(r.stderr); exit=1; break; } process.stdout.write('.'); } console.log(''); process.exit(exit);\""
  },
  "dependencies": {
    "gifenc": "^1.0.3",
    "konva": "^9.3.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-konva": "^18.2.10"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "jsdom": "^28.1.0",
    "sharp": "^0.34.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.markshot.app",
    "productName": "MarkShot",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}